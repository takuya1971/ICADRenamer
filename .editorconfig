[*.cs]

# CS0612: 型またはメンバーが旧型式です
dotnet_diagnostic.CS0612.severity = silent

# CA1819: プロパティは配列を返すことはできません
dotnet_diagnostic.CA1819.severity = silent

# CA1062: パブリック メソッドの引数の検証
dotnet_diagnostic.CA1062.severity = silent

# CA2227: コレクション プロパティは読み取り専用でなければなりません
dotnet_diagnostic.CA2227.severity = silent

# CA1303: ローカライズされるパラメーターとしてリテラルを渡さない
dotnet_diagnostic.CA1303.severity = silent

# CA1401: P/Invokes は参照可能にすることはできません
dotnet_diagnostic.CA1401.severity = silent

# CA2000: スコープを失う前にオブジェクトを破棄
dotnet_diagnostic.CA2000.severity = silent

# CA2208: 引数の例外を正しくインスタンス化します
dotnet_diagnostic.CA2208.severity = silent

# CA1305: IFormatProvider を指定します
dotnet_diagnostic.CA1305.severity = silent

# IDE0008: 明示的な型の使用
csharp_style_var_when_type_is_apparent = false:silent

# IDE0008: 明示的な型の使用
csharp_style_var_elsewhere = false:silent

# IDE0008: 明示的な型の使用
csharp_style_var_for_built_in_types = false:silent

# CA1031: Do not catch general exception types
dotnet_diagnostic.CA1031.severity = silent
